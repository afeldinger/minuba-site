{
  "root": {
    "src": "./src",
    "dest": "./public"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "public"
      }
    },

    "js": {
      "src": "scripts",
      "dest": "assets/scripts",
      "extractSharedJs": false,
      "entries": {
        "scripts": ["./scripts.js"]
      },
      "extensions": ["js"]
    },

    "css": {
      "src": "styles",
      "dest": "assets/css",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": true,
        "compiler": "3.4.1"
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "html",
      "dest": "./",
      "dataFile": "data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },

    "images": {
      "src": "img",
      "dest": "assets/img",
      "extensions": ["jpg", "png", "svg", "gif"],
      "excludeFolders": ["sprites"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "assets/fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "fonts/icons",
      "dest": "assets/fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "img/sprites",
      "dest": "assets/img",
      "extensions": ["svg"]
    }
  }
}
